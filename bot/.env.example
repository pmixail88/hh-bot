# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL=postgresql+asyncpg:///./hh_bot.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# HH.ru API (опционально)
HH_CLIENT_ID=your_hh_client_id
HH_CLIENT_SECRET=your_hh_client_secret
HH_API_TIMEOUT=30
HH_MAX_RESULTS=50

# LLM API (OpenAI-совместимое)
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_api_key_here
LLM_MODEL_NAME=gpt-4o
LLM_TIMEOUT=60
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_TIMES=09:00,18:00
CHECK_INTERVAL_HOURS=24

# Redis (для кэширования)
REDIS_URL=redis://localhost:6379/0

# Debug
DEBUG=false